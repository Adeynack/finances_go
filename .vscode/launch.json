  "version": "0.2.0",
  "configurations": [
    // Inspired from https://medium.com/average-coder/how-to-debug-a-running-go-app-with-vscode-76e3eac45bd
    // Does not work well enough for the moment. Use `Attach to Process` and find `out/serve` in the list. ü§∑üèº‚Äç‚ôÇÔ∏è
    // {
    //   "name": "Attach to dlv",
    //   "type": "go",
    //   "request": "attach",
    //   "remotePath": "${workspaceFolder}",
    //   "mode": "remote",
    //   "port": 40101,
    //   "host": "127.0.0.1",
    //   // "program": "${workspaceFolder}",
    // },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickGoProcess}"
    },
    {
      "name": "serve (ENV dev)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/serve",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "serve (ENV test)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/serve",
      "cwd": "${workspaceFolder}",
      "env": {
        "APP_ENV": "test"
      }
    },
    {
      "name": "ops db:codegen (DEV dev)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/ops",
      "args": [
        "db:codegen"
      ],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}"
    }
  ]
}